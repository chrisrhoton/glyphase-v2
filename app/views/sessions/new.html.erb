<% provide(:title, "Log in") %>
<section class="homeContent">
  <br>
  <h2 class="homeContent-tagline">Log In</h2>
  <%= form_for(:session, url: login_path, html: { class: 'login-form' }) do |f| %>

    <%= f.email_field :email, class: 'input-text', placeholder: "Email" %>

    <%= f.password_field :password, class: 'input-text', placeholder: "Password" %>

    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this device</span>
    <% end %>

    <section class="action">
      <%= f.submit "Log in", class: "action-primary" %>
    </section>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", signup_path, class: 'feature-Link' %>
    <br>
    Forgot your password? <%= link_to "Click here", new_password_reset_path, class: 'feature-Link' %>
  </p>
</section>