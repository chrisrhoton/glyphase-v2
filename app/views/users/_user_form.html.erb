
<%= form_for @user, role: "form" do |f| %>

  <%= render 'shared/error_messages' %>

  <%= f.label :email, class: "input-label" %>
  <%= f.text_field :email, class: "input-text", placeholder: "example@mail.com" %>

  <%= f.label :username, class: "input-label" %>
  <%= f.text_field :username, class: "input-text", placeholder: "User Name" %>

  <%= f.label :password, class: "input-label" %>
  <%= f.password_field :password, class: "input-text", placeholder: "Password" %>

  <%= f.label :password_confirmation, class: "input-label" %>
  <%= f.password_field :password_confirmation, class: "input-text", placeholder: "Confirm" %>
  <br><br>

  <section class="action">
    <%= f.submit class: "action-primary" %>
  </section>

<% end %>
