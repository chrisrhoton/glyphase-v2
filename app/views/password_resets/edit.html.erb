<% provide(:title, "Reset Password") %>
<section class="homeContent">
  <br>
  <h2 class="homeContent-tagline">Reset Password</h2>
  <%= form_for(@user, url: password_reset_path(params[:id]), html: { class: 'login-form' }) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= hidden_field_tag :email, @user.email %>
    <%= f.password_field :password, class: "input-text", placeholder: "Password" %>
    <%= f.password_field :password_confirmation, class: "input-text", placeholder: "Confirm Password" %>

    <section class="action">
      <%= f.submit "Submit", class: "action-primary" %>
    </section>
  <% end %>

</section>