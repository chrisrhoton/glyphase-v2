<li class="glyphComments-item">
  <section class="glyphComments-authorImage"></section>
  <aside class="glyphComments-author"><%= comment.user.username %></aside>
  <p class="glyphComments-content">
    <%= comment.text %>
    <%= image_tag comment.image_attachment.url if comment.image_attachment? %>
  </p>
  <% if current_user?(comment.user) %>
    <div class="glyphComments-close">
      <%= link_to '&times;'.html_safe, 
                  [comment.glyph, comment], 
                  alt: "Delete",
                  title: "Delete Comment?",
                  method: :delete,
                  data: { 
                    confirm: "Are you sure you'd like to delete this comment?" 
                  } 
      %>
    </div>
  <% end %>
</li>